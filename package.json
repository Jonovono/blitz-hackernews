{
  "name": "blitz-hackernews",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "seed": "blitz db seed",
    "migrate:reset": "blitz prisma migrate reset --skip-seed",
    "migrate:dev": "blitz prisma migrate dev --skip-seed",
